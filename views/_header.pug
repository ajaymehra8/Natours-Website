header.header
  nav.nav.nav--tours
    a.nav__el.nav-link.tourText(href='/') All tours
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
   

  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout Log out
      a.nav__el(href='/me')
        img.nav__user-img(src=`${user.photo}` onerror="this.onerror=null; this.src='/img/users/default.jpeg';" alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el.nav-btn(href='/login') Log in
      a.nav__el.nav__el--cta.nav-btn(href='/signup') Sign up
  button.resBtn
    i.bi.bi-list